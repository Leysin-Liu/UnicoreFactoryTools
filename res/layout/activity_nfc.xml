    android:layout_height="match_parent"
	android:orientation="vertical"    
	android:padding="20dp"
    tools:context="com.unicore.showkeyvalue.MainActivity" >
    
	<ScrollView 
	    android:id="@+id/scrollView"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
